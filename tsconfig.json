{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
